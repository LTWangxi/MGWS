<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.jsp”所装饰 -->
	<mapping path="/*" decorator="/WEB-INF/views/decorators/decorator.jsp" />
	<mapping path="/products/init" decorator="/WEB-INF/views/decorators/decorator2.jsp" />
	<mapping path="/basic/init" decorator="/WEB-INF/views/decorators/decorator2.jsp" />
	<mapping path="/basic/update" decorator="/WEB-INF/views/decorators/decorator2.jsp" />
	<!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
	<mapping path="/index.jsp" exclue="true" />
	<mapping path="/" exclue="true" />
</sitemesh>